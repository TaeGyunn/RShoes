<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="resell.shoes.RShoes.repository.BrandRepository">


    <resultMap id="brand" type="resell.shoes.RShoes.entity.Brand">

        <id column="bno" property="brandNo"/>
        <result column="name" property="brandName"/>
        <association property="user" javaType="resell.shoes.RShoes.entity.User">
            <id column="uno" property="userNo"/>
            <result column="id" property="id"/>
            <result column="pw" property="pw"/>
            <result column="email" property="email"/>
            <result column="phone" property="phone"/>
            <result column="bank" property="bank"/>
            <result column="accnt" property="account"/>
            <result column="role" property="role"/>
        </association>

    </resultMap>

    <select id="checkByName" resultType="boolean">
        SELECT IF(COUNT(*) = 1, 1, 0)
        FROM brand b
        WHERE b.name = #{brandName}
    </select>

    <insert id="insertBrand">
        INSERT INTO brand(uno, name)
        VALUES(#{user.userNo}, #{brandName})
    </insert>



</mapper>